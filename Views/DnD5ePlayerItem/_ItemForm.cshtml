@model DND_Character_Sheet_Webapp.Models.DnD5ePlayerItem


<style>
    .form-group {
        padding-top: 7px; /* Set your desired top padding here */
        padding-bottom: 7px; /* Set your desired bottom padding here */
    }

    .control-label {
        font-size: 1em;
        font-weight: bold;
    }
</style>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Name" class="control-label">Item Name</label>
    <br />
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label">Description</label>
    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="WeightInPounds" class="control-label">Weight in Pounds</label>
    <input asp-for="WeightInPounds" class="form-control" />
    <span asp-validation-for="WeightInPounds" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CostInGoldPieces" class="control-label">Value in Gold Pieces</label>
    <p style="font-size:.9em" > If the item has no measurable value or is worthless, enter 0.</p>
    <input asp-for="CostInGoldPieces" class="form-control" />
    <span asp-validation-for="CostInGoldPieces" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Notes" class="control-label">Notes</label>
    <input asp-for="Notes" class="form-control" placeholder="Enter your notes here..." />
    <span asp-validation-for="Notes" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>